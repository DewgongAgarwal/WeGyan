<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>I</th>
      <th>S</th>
      <th>Description</th>
      <th>Hrs per week</th>
      <th>Timings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.i_id %></td>
        <td><%= post.s_id %></td>
        <td><%= post.description %></td>
        <td><%= post.hrs_per_week %></td>
        <td><%= post.timings %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
